# Have less display colours
# from: https://wiki.archlinux.org/index.php/Color_output_in_console#man
alias diff='diff --color=auto'
alias grep='grep --color=auto'
export LESS='--use-color -Rj5 -Dd+220$Du+115$DS+231.162$Dk+231.162$DP+231.162$'
alias ls='ls --color=auto'
alias tree='tree -C'
man_option() { man -P "less -p '^ +${2:?}'" "${1:?}"; }; alias mo=man_option
man_find() { man -P "less -p '${2:?}'" "${1:?}"; }; alias mf=man_find
man_lookup() { man -P "less -p '${1:?}'" "${1:?}"; }; alias ml=man_lookup
